<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="./../stylesheets/style.css">
      <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css"
        integrity="sha384-HSMxcRTRxnN+Bdg0JdbxYKrThecOKuH5zCYotlSAcp1+c8xmyTe9GYg1l9a69psu" crossorigin="anonymous">
      <!-- Font Awesome -->
      <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" rel="stylesheet" />
      <!-- Google Fonts -->
      <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
      <!-- MDB -->
      <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.6.0/mdb.min.css" rel="stylesheet" />
</head>

<body id="mainBody">
    <nav class="navbar navbar-light bg-success">
        <div id="navImg" class="container-fluid">
          <a class="navbar-brand" href="/"> Home </a>
          <a href="/auth/logout">Logout</a>
        </div>
      </nav>
    <h1>How You Treat Yourself</h1>
    
    <table class="table table-hover">
        <th>Name</th>
        <th>Amount</th>
        <th>Date</th>
        <th>Time</th>
        <% treats.forEach(treat=> { %>
            <tr>
                <td>
                    <%= treat.item %>
                </td>
                <td>
                    <%= treat.amount %>
                </td>
                <td>
                    <%= treat.date?.toLocaleDateString() %>
                </td>
                <td>
                    <%= treat.date?.toLocaleTimeString() %>
                </td>
                <td>
                    <form action="/treats/<%= treat._id %>?_method=PUT" method="POST">
                        <a href="/treats/<%= treat._id %>/edit">Edit</a>
                    </form>
                    <form action="/treats/<%= treat._id %>?_method=DELETE" method="POST">
                        <button>Delete</button>
                    </form>
                </td>
            </tr>
            <% }) %>
    </table>
    <br>
    <br>
    <a href="/treats/new">
        <button>Add New Expense</button>
    </a>
    <br>
    <br>
    <img src="https://media2.giphy.com/media/gVv0K9mssfJao/200.gif" alt="Treat Yoself">
</body>

</html>